//ESLint Configuration (eslint allows comments in JSON, use them)
{
    "parser": "babel-eslint",
    "parserOptions": {

        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
    },
    "env": {
       "browser": true,
    },
    "plugins":[
        "flowtype",
        "react"
    ],
     "extends": ["plugin:react/recommended"],
    "rules": {
        "brace-style": [2, "1tbs"],
        "camelcase": [0, {"properties": "never"}],
        "comma-dangle": [0, "always-multiline"],
        "comma-spacing": 2,
        "comma-style": [2, "last"],
        "consistent-return": 0, //maybe enable this later?
        "curly": [2, "all"],
        "default-case": 2,
        "dot-notation": [2, { "allowKeywords": true }],
        "eol-last": 2,
        "eqeqeq": 2,
        "indent": [2, 4],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "keyword-spacing": ["error", {"after": true, "overrides": {} }],
        "max-len": [2, 100, 4],
        "new-cap": 2,
        "new-parens": 2,
        "no-alert": 2,
        "no-array-constructor": 2,
        "no-caller": 2,
        "no-catch-shadow": 2,
        "no-cond-assign": [2, "always"],
        "no-console": 1,
        "no-debugger": 1,
        "no-labels": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-parens": [2, "functions"],
        "no-implied-eval": 2,
        "no-inline-comments": 1,
        "no-iterator": 2,
        "no-label-var": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-multiple-empty-lines": 1,
        "no-native-reassign": 2,
        "no-nested-ternary": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-octal-escape": 2,
        "no-process-exit": 2,
        "no-proto": 2,
        "no-return-assign": 0, //disabling for now
        "no-script-url": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-undef-init": 2,
        "no-underscore-dangle": [0],
        "no-unused-expressions": 2,
        "no-unused-vars": [2, {"vars": "all", "args": "none", "varsIgnorePattern":"React"}],
        "no-use-before-define": [2, "nofunc"],
        "no-var": [2],
        "no-with": 2,
        "operator-linebreak": [2, "after"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "semi-spacing": [2, {"before": false, "after": true}],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren" : [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        "strict": [2, "function"],
        "yoda": [2, "never"]
    }
}
